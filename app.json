{
  "name": "TA Prep LSP Backend",
  "description": "Laravel API Backend for TA Prep LSP - CI Testing Only",
  "repository": "https://github.com/darrielmarkerizal/levl-be",
  "environments": {
    "test": {
      "addons": [
        "heroku-postgresql:in-dyno"
      ],
      "buildpacks": [
        {
          "url": "heroku/php"
        }
      ],
      "env": {
        "APP_ENV": "testing",
        "APP_DEBUG": "true",
        "DB_CONNECTION": "pgsql",
        "DB_HOST": "localhost",
        "DB_PORT": "5432",
        "DB_DATABASE": "ci_test",
        "DB_USERNAME": "postgres",
        "DB_PASSWORD": "postgres"
      },
      "scripts": {
        "test-setup": "php -r \"putenv('DB_URL=' . getenv('DATABASE_URL'));\"",
        "test": "php artisan test --parallel"
      }
    }
  }
}
